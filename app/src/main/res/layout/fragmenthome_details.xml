<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/img_details"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic"
            android:transitionName="img"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_deatils_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_details"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorTextTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/home_title" />

        <TextView
            android:id="@+id/tv_deatils_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_deatils_desc"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="@string/home_description" />
        <TextView
            android:id="@+id/tv_detail_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_deatils_desc"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="@string/home_description" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>